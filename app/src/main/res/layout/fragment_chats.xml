<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.RequestsFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.recyclerview.widget.RecyclerView
        android:background="@color/lignGrey"
        android:id="@+id/fragment_chat_recyler"
        android:layout_width="match_parent"
         android:layout_height="match_parent">

    </androidx.recyclerview.widget.RecyclerView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/fragment_chat_plus"
            android:layout_marginLeft="15dp"
            android:layout_width="30dp"
            android:layout_gravity="left"
            android:layout_height="60dp"
            android:src="@drawable/plus"/>
        <EditText
            android:id="@+id/fragment_chat_message"
            android:layout_gravity="center"
            android:layout_width="260dp"
            android:textSize="21dp"
           android:gravity="center"
            android:hint="Add text to this message"
            android:layout_height="60dp"
            android:layout_margin="5dp"/>
        <ImageView

            android:id="@+id/fragment_chat_send"
            android:layout_marginLeft="10dp"
            android:layout_width="35dp"
            android:layout_margin="3dp"
            android:layout_gravity="right"
            android:layout_height="60dp"
            android:src="@drawable/send"/>





    </FrameLayout>


</FrameLayout>